@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>股票数据分析</title>
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
    <script src="~/Scripts/jtable/jquery.jtable.min.js"></script>
    <script src="~/Scripts/jtable/localization/jquery.jtable.zh-CN.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#container').jtable({
                title: '连续下跌股票数据分析',
                paging: false,
                pageSize: 50,
                sorting: true,
                defaultSorting: 'lowend desc,lowdays desc ,lowchg desc',
                //openChildAsAccordion: true, //Enable this line to show child tabes as accordion style
                actions: {
                    listAction: '/Hq/GetStockHqAsync',
                    createAction: '/GettingStarted/CreatePerson',
                    updateAction: '/GettingStarted/UpdatePerson',
                    deleteAction: '/GettingStarted/DeletePerson'
                },
                fields: {
                    Id: {
                        title: '序号',
                        key: true,
                        create: false,
                        edit: false,
                        list: false,
                        width: '2%'
                    },
                    Exams: {
                        title: '',
                        width: '2%',
                        sorting: false,
                        edit: false,
                        create: false,
                        display: function (data) {
                            //Create an image that will be used to open child table
                            var $img = $('<img src="/Content/images/more.png" title="日交易详情（最近10个交易日）" />');
                            //Open child table when user clicks the image
                            $img.click(function () {
                                $('#container').jtable('openChildTable',
                                        $img.closest('tr'), //Parent row
                                        {
                                            title: data.record.Name + ' - 日交易详情（最近10个交易日）',
                                            actions: {
                                                listAction: '/Hq/GetStockHqDetailAsync?stockId=' + data.record.Id,
                                                deleteAction: '/Demo/DeleteExam',
                                                updateAction: '/Demo/UpdateExam',
                                                createAction: '/Demo/CreateExam'
                                            },
                                            fields: {
                                                Id: {
                                                    title: '序号',
                                                    key: true,
                                                    create: false,
                                                    edit: false,
                                                    list: false
                                                },
                                                StockId: {
                                                    type: 'hidden',
                                                    defaultValue: data.record.Id,
                                                },
                                                Date: {
                                                    title: '交易时间',
                                                },
                                                Open: {
                                                    title: '开盘价',
                                                },
                                                Highest: {
                                                    title: '最高价',
                                                },
                                                Lowest: {
                                                    title: '最低价',
                                                    edit: false,
                                                },
                                                Chg: {
                                                    title: '涨跌幅',
                                                },
                                                Change: {
                                                    title: '涨跌额',
                                                },
                                                Volume: {
                                                    title: '成交量(手)',
                                                },
                                                Turnover: {
                                                    title: '成交金额(万)',
                                                },
                                                Rate: {
                                                    title: '换手率',
                                                }
                                            }
                                        }, function (data) {
                                            data.childTable.jtable('load');
                                        });
                            });
                            //Return image to show on the person row
                            return $img;
                        }
                    },
                    Code: {
                        title: '证券代码',
                    },
                    Name: {
                        title: '证券简称',
                        display: function (data) {
                            if (data.record.Lowchg > 0) {
                                return '<b style="color:red">' + data.record.Name + '</b>';
                            }
                            else if (data.record.Lowchg < 0 && data.record.Lowdays >= 3) {
                                //连跌3天并且是最后一个交易日也收跌
                                return '<b style="color:green">' + data.record.Name + '</b>';
                            }
                            else {
                                return '<b>' + data.record.Name + '</b>';
                            }
                        }
                    },
                    Lowbegin: {
                        title: '下跌日期',
                    },
                    Lowend: {
                        title: '止跌日期',
                    },
                    Lowdays: {
                        title: '下跌天数',
                    },
                    Lowchg: {
                        title: '涨跌幅',
                    },
                    Lowclose: {
                        title: '收盘价',
                    },
                    Lowrate: {
                        title: '换手率',
                    },
                    Lowvolume: {
                        title: '成交量(手)',
                    },
                    Lowturnover: {
                        title: '阶段涨跌额',
                    }
                    //    RecordDate: {
                    //    title: 'Record date',
                    //    width: '15%',
                    //    type: 'date',
                    //    displayFormat: 'dd.mm.yy',
                    //    create: false,
                    //    edit: false,
                    //    sorting: false //This column is not sortable!
                    //}
                }
            });
            $('#container').jtable('load');
        });
    </script>
</head>
<body>
    <!--连续下跌股票数据分析-->
    <div id="container" />
</body>
</html>